<view class="quiz"><block wx:for="{{quizList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="quiz_box"><view class="quiz_box_title"><text class="quiz_box_title_title"><text class="quiz_box_title_titles">{{index<9?'0'+(index+1):index+1}}</text>{{''+item.question+''}}</text></view><radio-group id="{{index}}" data-event-opts="{{[['change',[['radioChange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{item.answer_content}}" wx:for-item="items" wx:for-index="indexs" wx:key="*this"><label class="quiz_box_cintent"><view class="quiz_box_cintent_radio"><radio color="#88c075" value="{{items}}" checked="{{items==item.answer}}"></radio></view><block wx:if="{{items==item.answer}}"><text class="quiz_box_cintent_text">{{items}}</text></block><block wx:else><text class="quiz_box_cintent_texts">{{items}}</text></block></label></block></radio-group></view></block><button class="quiz_button" type="primary" data-event-opts="{{[['tap',[['submit']]]]}}" bindtap="__e">我答完了</button></view>